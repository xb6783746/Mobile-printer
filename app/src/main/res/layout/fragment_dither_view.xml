<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobileprinter.View.DitherScreen.DitherView">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="400dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@color/cardview_shadow_end_color"
            android:id="@+id/ditherImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/mainButtons"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="FS"
            android:id="@+id/floydSteinbergDitheringButton"
            android:layout_height="50dp"
            android:layout_width="wrap_content" />

        <Button
            android:text="ATK"
            android:layout_height="50dp"
            android:id="@+id/atkinsonDitheringButton"
            android:layout_width="wrap_content" />

        <Button
            android:text="STC"
            android:layout_height="50dp"
            android:id="@+id/stuckiDitheringButton"
            android:layout_width="wrap_content" />

        <Button
            android:text="prnt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/printDitheredButton" />
    </LinearLayout>

</RelativeLayout>