<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobileprinter.View.EditScreen.ImageEditorActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainButtons">

        <Button
            android:text="О"
            android:layout_width="109dp"
            android:layout_height="66dp"
            android:id="@+id/openGalleryButton"
            android:layout_weight="1"
            android:onClick="openGallery" />

        <Button
            android:text="Р"
            android:layout_width="109dp"
            android:layout_height="66dp"
            android:id="@+id/imageEditButton"
            android:layout_weight="1"
            android:onClick="editButtonClick" />

        <Button
            android:text="О"
            android:layout_width="109dp"
            android:layout_height="66dp"
            android:id="@+id/cutButton"
            android:layout_weight="1"
            android:onClick="cutButtonClick" />

        <Button
            android:text="Д"
            android:layout_width="109dp"
            android:layout_height="66dp"
            android:id="@+id/printButton"
            android:onClick="printButtonClick" />
    </LinearLayout>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/imageEditButtons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:max="100" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:color/background_light"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:layout_above="@+id/seekBar" />

    <FrameLayout
        android:id="@+id/imageEditButtons"
        android:layout_height="40dp"
        android:layout_width="wrap_content"
        android:layout_above="@+id/mainButtons"
        android:layout_centerHorizontal="true">

    </FrameLayout>

</RelativeLayout>
